{
  "version": "1.8.0",
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "esnext",
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}